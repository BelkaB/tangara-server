{% if current_project is defined %}
    {% if active is defined and active == 'project' %}
<li class="active" id="project">
    {% else %}
<li id="project">
    {% endif %}
    <a href="#"><span class="glyphicon glyphicon-folder-open"></span>
    {% if current_project.getName() is defined %}
        {% if current_project.getName() is empty %}
            {{ 'project.default_name' | trans }}
        {% else %}
            {{ current_project.getName() }}
        {% endif %}
    {% endif %}
    </a>
</li>
{% endif %}
{% if active is defined and active == 'profile' %}
<li id="profile" class="dropdown active">
{% else %}
<li id="profile" class="dropdown">
{% endif %}
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="user-dropdown-trigger"><span class="glyphicon glyphicon-user"></span>{{ app.user.username }} <span class="caret"></span></a>
    <ul class="dropdown-menu dropdown-menu-right" id="user-dropdown" role="menu">
        <li>
            
            <a href="{{ path('tangara_user_profile_show') }}" class="content-link" data-active="profile" data-title="coucou">
                {{'navbar.profile'|trans }} 
            </a>
        </li>
        <li>
        <a href="{{ path('fos_user_security_logout') }}" id="logout-link">
            {{'navbar.logout'|trans }} 
        </a>
        </li>
    {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('tangara_admin_homepage') }} ">
                    {{ 'navbar.admin_interface'|trans }}
                </a>
            </li>
    {% endif %}
    </ul>
</li>