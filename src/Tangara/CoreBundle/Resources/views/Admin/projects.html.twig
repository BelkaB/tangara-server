{#  view for admin -> projects #}
<div class="container">
{# block project   #}           
    <div class="row"> 
        <div class="col-md-12">
            <table class="table table-striped" > 
                    <h2 align="center">{{ 'admin.projects'|trans }}</h2>
                    <br>
                    <tr> 
                        <th><p align="center">{{ 'admin.project'|trans }}</p></th>
                        <th><p align="center"> - </p></th>
                        <th><p align="center">{{ 'admin.owner'|trans }}</p></th>
                        <th><p align="center"> - </p></th>
                        <th><p align="center">{{ 'admin.project_datetime'|trans }}</p></th>
                    </tr> 
                    {% for key, project in projects %}
                    <tr>
                        <td>
                            <p align="center"><a href="{{ path('tangara_project_show', {'projectId': project.id}) }}"> {{ project.name }}</a></p> 
                        </td>
                        <td>
                            <p align="center">  ->  </p>
                        </td>
                        <td>
                            <p align="center"><a href="{{ path('tangara_user_profile_show', {'user_id': project.owner.id}) }}">{{ project.owner }}</a></p>
                        </td>
                        <td>
                            <p align="center">  ->  </p>
                        </td>
                        <td>
                            <p align="center">{{ project.created|date("m/d/Y") }}</p>
                        </td>
                    </tr>
                    {% endfor %}
            </table>
            <div class="navigation">
                    {{ knp_pagination_render(projects) }}
            </div>
        </div>
            {# end block project #}
    </div>        
</div>  
