<script>
    // Initiate URLS
    var url_discover = "{{ url('tangara_core_discover') }}";
    var url_share = "{{ url('tangara_core_share') }}";
    var url_create = "{{ url('tangara_core_create') }}";
    var url_user_menu = "{{ url('tangara_core_user_menu') }}";
    
    // Current state info
    var active_nav = "{{active}}";
{% if contentUrl %}
    var content_url = "{{contentUrl}}";
{% else %}
    var content_url = false;
{% endif %}    
    
    // messages
    var messageUnsaved = "{{'message.unsaved'|trans}}";

    // check for unsaved programs when leaving Tangara
    window.onbeforeunload = function(e) {
        if (document.getElementById('local-frame').contentWindow.isUnsaved()) {
            var e = e || window.event;
            if (e) {
                e.returnValue = messageUnsaved;
            }
            return messageUnsaved;
        }
    };
</script>
