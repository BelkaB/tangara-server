{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="row">
        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        <div class="col-md-6">
            <fieldset>
                <legend>Mes projets</legend>
                <a class="btn btn-success" href="{{ path('tangara_project_user_new', {user_id: user.getId()}) }}">Créer un nouveau projet</a>
                <ul>
                    {% set userProjects = user.getProjects() %}
                    {% for project in userProjects %}
                        <li><a href="{{ path( "tangara_project_show", {id: project.getId(), cat: 1} ) }}">{{ project.getName() }}</a></li>
                    {% endfor %}
                </ul>
            </fieldset>
        </div>
        <div class="col-md-6">
            <fieldset>
                <legend>Mes groupes</legend>
                <a class="btn btn-success" href="{{ path('fos_user_group_new') }}">Créer un nouveau groupe</a>
                <p>Tu es membre de :</p>
                <ul>
                    {% set userGroups = user.getGroups() %}
                    {% for group in userGroups %}
                        <li><a href="{{ path( "tangara_user_groupInfo", {id: group.getId()} ) }}">{{ group.getName() }}</a></li>
                    {% endfor %}
                </ul>
                <a href="{{ path('fos_user_group_list') }}">Liste de tous les groupes</a>
            </fieldset>
        </div>
    </div>
</div>
