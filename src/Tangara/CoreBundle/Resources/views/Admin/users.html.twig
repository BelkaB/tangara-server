<div class="container">
    <h1>{{'admin.title'|trans }}</h1>
    <div class="row">
        <div class="col-md-3">
            {% include 'TangaraCoreBundle:Admin:menu.html.twig' %}
        </div>
        <div class="col-md-9">
            <form id="search_form">
                <input type="text" id="search_form_search" name="search" class="form-control" placeholder="{{'search'|trans}}" {% if search %} value="{{search}}" {% endif %} >
            </form>
            <div id="users"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var currentTimer = 0;

    function ajaxRequest() {
        currentTimer = 0;
        //TODO: add loading gif        
        $('#users').empty();
        var value = $('#search_form_search').val();
        fetchList(1, value);
    }

    function ajaxSearch(now) {
        if (currentTimer !==0) {
            clearTimeout(currentTimer);
        }
        if (now) {
            ajaxRequest();
        } else {
            currentTimer = setTimeout(ajaxRequest, 500);
        }
    }

    function ajaxifyPagination() {
        $("#pagination").find("a").click(paginationLink);        
    }

    function paginationLink(event) {
        event.preventDefault();
        var $link = $(this);
        var url = $link.attr("href");
        $("#users").load(url,{},ajaxifyPagination);
    }

    function fetchList(page, search) {
        var data = {'page': page};
        if (search !== false) {
            data['search'] = search;
        }
        $("#users").load("{{ path('tangara_admin_users_list') }}",data, ajaxifyPagination);
    }

    $(document).ready(function () {
        fetchList({{page}}, {% if search %} "{{search}}" {% else %} false {%endif%});
        
        $('#search_form').on('submit', function(e) {
            e.preventDefault();
            ajaxSearch(true);
        });
        
        $('#search_form_search').keydown(function (key) {
            ajaxSearch(false);
        });
    });
</script>
