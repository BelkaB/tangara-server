<div class="container">
    {% include 'TangaraCoreBundle:Main:messages.html.twig' %}
    <h2>{{'course.step_management_1'|trans}}
    <a href="{{ path( "tangara_course_show", {'courseId':course.getId()}) }}">
    {{course.getName()}}
    </a>
    {{'course.step_management_2'|trans}}
    </h2>
    <div class="list-group">
        {% for step in steps %}
         <a href="{{ path( "tangara_step_show", {courseId: course.getId(), stepId:step.getId()} ) }}" class="list-group-item content-link" data-active="learn">
             <h4 class="list-group-item-heading">
                {{ step.getProject().getName() }}
             </h4>
             <p class="list-group-item-text">
                {{ step.getProject().getDescription() }}
             </p>
         </a>
     {% endfor %}
    </div>
    <a href="{{ path('tangara_step_list', {courseId: course.getId()}) }}" class="btn btn-default content-link" data-active="learn" data-title="project">
            {{'course.add_step'|trans }} 
    </a>
    <a href="{{ path('tangara_step_create', {courseId: course.getId()}) }}" class="btn btn-default content-link" data-active="learn" data-title="project">
            {{'course.create_step'|trans }} 
    </a>
</div>