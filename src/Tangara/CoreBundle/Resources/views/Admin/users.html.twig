{% form_theme form 'TangaraCoreBundle:Form:fields.html.twig' %}
<div class="container">
    <h1>{{'admin.title'|trans }}</h1>
    <div class="row">
        <div class="col-md-3">
            {% include 'TangaraCoreBundle:Admin:menu.html.twig' %}
        </div>
        <div class="col-md-9">
            <table class="table table-condensed table-hover">
                {% for user in users %}
                    <tr>
                        <td>
                        <a href="{{ path('tangara_user_profile_show', {'user_id': user.id}) }}">{{  user.username|e }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div class="navigation">
                {{ knp_pagination_render(users) }}
            </div>            
            <form id="search_form" {{ form_enctype(form) }}>
                {{ form_widget(form) }}        
            </form>
            <div id="foundUsers">
            </div>            
        </div>
    </div>
</div>
<script type="text/javascript">
    var currentTimer = 0;

    function ajaxRequest() {
        //TODO: add loading gif
        $('#foundUsers').empty();
        var value = $('#search_form_search').val();
        if (value.trim().length>=1) {
            $.ajax({
                type: "POST",
                url: "{{ path('tangara_admin_search_ajax') }}",
                data: {search: value},
                cache: false,
                success: function (data) {
                    $('#foundUsers').html(data);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#foundUsers').text("{{'admin.ajax_error'|trans }}").show();
                },
                complete: function() {
                    currentTimer = 0;
                }
            });
        } else {
            currentTimer = 0;
            //TODO: add empty text
        }
    }

    function ajaxSearch(now) {
        if (currentTimer !==0) {
            clearTimeout(currentTimer);
        }
        if (now) {
            ajaxRequest();
        } else {
            currentTimer = setTimeout(ajaxRequest, 100);
        }
    }

    $(document).ready(function () {

        
        $('#search_form').on('submit', function(e) {
            e.preventDefault();
            ajaxSearch(true);
        });
        
        $('#search_form_search').keydown(function (key) {
            ajaxSearch(false);
        });
    });
</script>
