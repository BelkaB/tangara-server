{# view for admin -> users #}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            {% include 'TangaraCoreBundle:Admin:menu.html.twig' %}
        </div>
        <div class="col-md-9">
            <h2 align="center">{{ 'admin.members'|trans }}</h2>
            <ul>
                {% for user in users %}
                    <a href="{{ path('tangara_user_profile_show', {'user_id': user.id}) }}" class="btn btn-primary">{{  user.username|e }}</a>
                {% endfor %}
            </ul>
        <br>
        <div class="col-md-1"></div>
        <div class="col-md-6">
                        <h2 align="center">{{ 'admin.members'|trans }}</h2>
                        <br>
                        <br>
                        {% render(controller('TangaraCoreBundle:Admin:search')) %}
                        <br>
                        <br>
                        <ul>
                            {% for user in users %}
                                <a href="{{ path('tangara_user_profile_show', {'user_id': user.id}) }}"><button class="btn btn-primary form-control"> {{  user.username|e }} </button></a>
                                                <br>
                                                <br>    
                            {% endfor %}
                        </ul>
            <div class="navigation">
                    {{ knp_pagination_render(users) }}
            </div>            
        </div>
    </div>
</div>
