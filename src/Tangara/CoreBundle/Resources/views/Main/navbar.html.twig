<div class="navbar navbar-fixed-top" id="navbar-tangara" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" id="logo" href="#">
        <img class="logo" src="{{ asset('bundles/tangaracore/img/logo.png')}}">Tangara
      </a>
    </div>
    <div class="navbar-collapse collapse">
        {% if is_granted('ROLE_USER') %}
            <div class="dropdown navbar-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="user-menu-trigger">{{ app.user.username }} <span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu-right" id="user-menu" role="menu">
                    <li>
                        <a href="{{ path('fos_user_profile_show') }} ">
                            {{'navbar.profile'|trans }} 
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }} ">
                            {{'navbar.logout'|trans }} 
                        </a>
                    </li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('tangara_admin_homepage') }} ">
                            {{ 'navbar.admin_interface'|trans }}
                        </a>
                    </li>
                {% endif %}
                </ul>
            </div>
        {% else %}
            <div class="dropdown navbar-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="user-menu-trigger">{{ 'navbar.account'|trans }} <span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu-right" id="user-menu" role="menu">
                    <li>
                        {% render url('fos_user_security_login') %}
                    </li>
                    <li>
                        <a href="{{ path('fos_user_registration_register') }} ">
                            {{'navbar.register'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        {% endif %}
        <ul class="nav navbar-nav" id="main-menu">
            <li id="discover" class="main-menu active"><a href="#">{{ 'navbar.learn'|trans}}</a></li>
            <li id="create" class="main-menu"><a href="#">{{ 'navbar.create'|trans}}</a></li>
            <li id="share" class="main-menu"><a href="#">{{ 'navbar.share'|trans}}</a></li>
            
<!--
            {% if is_granted('ROLE_USER') %}<li class=""><a href="{{ path('fos_user_profile_show')}}">{{ 'navbar.profile'|trans}}</a></li>{% endif %}
-->
        </ul>
    </div><!--/.navbar-collapse -->
  </div>
</div>
